<?xml version="1.0" encoding="UTF-8"?>
<vxml version = "2.1">
    <form id="record">
        <record name="message" beep="true" maxtime="60s">
            <prompt>Please leave your message after the beep, then press any key.</prompt>
        </record>
        <block>
            <prompt>Here's what you recorded <value expr="message"/>.</prompt>
        </block>
        <field name="accept">
            <prompt> 
            Press 1 to confirm question and end call. Press 2 to retry record of the message. Press 3 to delete message and return to the main menu.
            </prompt>
            <grammar mode="dtmf" root="acc">
                <rule id="acc" scope="public">
                    <one-of>
                        <item>1</item>
                        <item>2</item>
                        <item>3</item>
                    </one-of>
                </rule>
            </grammar>
        </field>
        <filled>
            <if cond="accept == 1">
                <submit next="https://ict4d.altervista.org/recording.php" enctype="multipart/form-data" method="post"/>
            <elseif cond="accept == 2"/>
                <goto next="#record"/>
            <elseif cond="accept == 3"/>
                <goto next="mainvoice.xml#ffarmerMenu"/>
            </if>
        </filled>
    </form>
</vxml>