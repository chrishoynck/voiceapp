<?xml version="1.0" encoding="UTF-8"?>
<vxml version = "2.1">
    <form id="record">
        <record name="message" beep="true" maxtime="60s">
            <prompt> option <value expr="session.connection['selectedOption']"/> or  <value expr="session.params['selectedOption']" />. Please leave your answer after the beep, stating the question number for this answer first, then press any key.</prompt>
        </record>
        <block>
            <prompt>Here's what you've recorded <value expr="message"/><break/></prompt>
        </block>
        <field name="accept">
            <prompt> 
            Press 1 to confirm this awnser and end call. Press 2 to retry recording your answer. Press 3 to delete the answer and return to the main menu.
            </prompt>
            <grammar mode="dtmf" root="acc">
                <rule id="acc" scope="public">
                    <one-of>
                        <item>1</item>
                        <item>2</item>
                        <item>3</item>
                    </one-of>
                </rule>
            </grammar>
        </field>
        <filled>
            <if cond="accept == 1">
                <prompt> Thank you so much for helping others, good farming!</prompt>
                <submit next="https://ict4d.altervista.org/English/NewRecords/record_answer.php" enctype="multipart/form-data" method="post"/>
            <elseif cond="accept == 2"/>
                <goto next="#record"/>
            <elseif cond="accept == 3"/>
                <goto next="mainvoice.xml#efarmerMenu"/>
            </if>
        </filled>
    </form>
</vxml>