 <grammar mode="voice"
         root="root_rule"
         tag-format="semantics/1.0"
         type="application/srgs+xml"
         version="1.0"
         xml:lang="en-US">
                  <rule id="root_rule" scope="public">
                           <one-of>
                                    <item>
                                             <one-of>
                                                      <item>
                                                               yes
                                                      </item>
                                                      <item>
                                                               ok
                                                      </item>
                                                      <item>
                                                               yeah
                                                      </item>
                                             </one-of>
                                             <tag>out.conf = "yes";</tag>
                                    </item>
                                    <item>
                                             <one-of>
                                                      <item>
                                                               no
                                                      </item>
                                                      <item>
                                                               nope
                                                      </item>
                                             </one-of>
                                             <tag>out.conf = "no";</tag>
                                    </item>
                                    <item>
                                             <one-of>
                                                      <item>
                                                               cancel
                                                      </item>
                                             </one-of>
                                             <tag>out.conf = "cancel";</tag>
                                    </item>
                           </one-of>
                  </rule>

         </grammar>